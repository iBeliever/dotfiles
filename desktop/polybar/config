[colors]

blue1 = #0e5a8a
blue5 = #48aff0

background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #999
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
warn = #d9822b

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 56
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #000

module-margin-left = 1
module-margin-right = 2

